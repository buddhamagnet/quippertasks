<% if @tasks.any? %>
<h3>Expired Tasks</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Completed</th>
      <th>Created</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.description %></td>
        <td>EXPIRED</td>
        <td><%= task.completed ? "yes" : "no" %></td>
        <td><%= time_ago_in_words(task.created_at) %> ago</td>
        <td>
          <%= link_to 'Destroy', task_path(task), method: :delete, confirm: 'Are you sure?', class: 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h3>No tasks currently expired</h3>
<% end %>