<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Task</legend>
    <%= render :partial => 'shared/error_messages', :locals => { :object => @task } %>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area' %>
      </div>
    </div>
   
    <% unless @task.new_record? %>
	<div class="control-group">
      <%= f.label :completed, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :completed, :class => 'check_box' %>
      </div>
    </div>
    <% end %>

    <div class="control-group">
      <%= f.label :deadline, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :deadline, :class => 'date_select', :start_year => Time.now.year %>
      </div>
    </div>

	<div class="control-group">
      <%= f.label :dcoument, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :document, :class => 'file_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', tasks_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
